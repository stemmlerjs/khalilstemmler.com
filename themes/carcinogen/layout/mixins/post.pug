
//- Post Info
//-     Just contains the date and if it was from
mixin postInfo(item)
    .post-info
        a
        != full_date(item.date, config.date_format)
        if item.from && (is_home() || is_post())
            a.post-from(href=item.from, target='_blank', title=item.from)
                != __('translate_original')

mixin postTitle(title)
    if title
        != title
    else
        != __('untitled')

//- Tags
mixin tags(tags)
    - tags.each(function(tag) {
        a(href=url_for(tag.path)).tagname
            != tag.name
    - })

mixin categories(categories)
    - categories.each(function(category) {
        a(href=url_for(category.path))
            != category.name
    - })

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href=url_for(item.path) class="no-barba")
                            +postTitle(item.title)

                    // pre #{ JSON.stringify(Object.keys(item))}
                    // Render tags on the post

                    // +categories(item.categories)
                    +tags(item.tags)
                    +postInfo(item)
                    .post-content
                        != item.excerpt
                    a.read-more(href=url_for(item.path))
                        != __('read_more')
        - })

//- Archive Page (tags, categories, etc)

mixin postList()
    .archive
        - var year = 0;
        - var change = false;
        - page.posts.each(function (item) {
            - var itemYear = date(item.date, 'YYYY') - 0;
            - change = year !== itemYear;
            - year = change ? itemYear : year;
            if change
                h2.archive-year
                    != year
            .post-item
                +postInfo(item)
                a.post-title-link(href=url_for(item.path))
                    +postTitle(item.title)
        - })


//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                +postTitle(item.title)
            // +categories(item.categories)
            +tags(item.tags)
            +postInfo(item)
            .post-content
                != item.content